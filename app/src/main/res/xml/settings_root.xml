<?xml version="1.0" encoding="utf-8"?>

<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:key="com.battlelancer.seriesguide.settings.upgrade"
        app:title="@string/action_upgrade" />

    <SwitchPreferenceCompat
        app:defaultValue="True"
        app:key="com.battlelancer.seriesguide.autoupdate"
        app:summary="@string/pref_autoupdatesummary"
        app:title="@string/pref_autoupdate" />

    <CheckBoxPreference
        app:defaultValue="False"
        app:key="com.battlelancer.seriesguide.autoupdatewlanonly"
        app:summary="@string/pref_updatewifionlysummary"
        app:title="@string/pref_updatewifionly" />

    <Preference
        app:key="screen_notifications"
        app:title="@string/pref_notifications" />

    <PreferenceCategory app:title="@string/prefs_category_sharing">

        <Preference
            app:key="com.battlelancer.seriesguide.settings.cloud"
            app:title="@string/hexagon" />

        <Preference
            app:key="com.battlelancer.seriesguide.settings.trakt"
            app:title="@string/trakt" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/backup">

        <Preference
            app:key="com.battlelancer.seriesguide.settings.autobackup"
            app:summary="@string/pref_autobackupsummary"
            app:title="@string/pref_autobackup" />

        <Preference
            app:key="com.battlelancer.seriesguide.settings.dataliberation"
            app:summary="@string/backup_summary"
            app:title="@string/backup" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/pref_appearance">
        <ListPreference
            app:defaultValue="0"
            app:entries="@array/themeSelection"
            app:entryValues="@array/themeSelectionData"
            app:key="com.battlelancer.seriesguide.theme"
            app:title="@string/pref_theme" />
        <ListPreference
            app:defaultValue="default"
            app:entries="@array/numbers"
            app:entryValues="@array/numberData"
            app:key="numberformat"
            app:title="@string/pref_number" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/pref_other">

        <Preference
            app:key="screen_basic"
            app:title="@string/prefs_category_basic" />

        <Preference
            app:key="clearCache"
            app:summary="@string/clear_cache_summary"
            app:title="@string/clear_cache" />

        <Preference
            app:summary="@string/pref_communitysummary"
            app:title="@string/pref_community">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://discuss.seriesgui.de" />
        </Preference>

        <Preference
            app:summary="@string/pref_translatesummary"
            app:title="@string/pref_translate">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://crowdin.net/project/seriesguide-translations/invite" />
        </Preference>

        <Preference
            app:key="aboutPref"
            app:title="@string/prefs_category_about" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>